// Modal
#mySignUpModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') ×
        h4#myModalLabel.modal-title 회원가입
      .modal-body
        form(action='/users', method='POST')
            .form-group
                label(for='name') 이름
                input.form-control(type='text', id='name', name='name', placeholder='Your name')
            .form-group
                label(for='email') 이메일
                input.form-control(type='email', id='email', name='email', placeholder='Email')
            .form-group
                label(for='password') 비밀번호
                input.form-control(type='password', id='password', name='password', placeholder='Password')
            .form-group
                label(for='password_confirmation') 비밀번호 확인
                input.form-control(type='password', id='password_confirmation', name='password_confirmation', placeholder='Password')
            div.form-actions
                button.btn.btn-default.pull-left(type='button', data-dismiss='modal') 닫기
                button.btn.btn-primary.pull-left(type='submit') 완료
            div 
      .modal-footer
            
            div.form-actions
                button.btn.btn-primary.form-actions(type='submit') 완료
